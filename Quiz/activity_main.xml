<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        tools:context=".ui.MainActivity">

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:layout_margin="16dp"

                                                       app:cardCornerRadius="8dp"
    >

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" tools:text="Deneme"
                      android:id="@+id/tvSoru"/>


            <com.google.android.material.chip.ChipGroup android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="16dp"
                                                        android:layout_below="@id/tvSoru"
                                                        android:id="@+id/chipGrup"
                                                        app:chipSpacing="16dp"
                                                        app:singleSelection="true"
            >

                <com.google.android.material.chip.Chip
                        android:layout_marginTop="10dp"
                        android:id="@+id/chipA"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="@color/chip_bgcolor"
                        android:textColor="@android:color/white"
                        android:text="a Şıkkı"/>

                <com.google.android.material.chip.Chip

                        android:id="@+id/chipB"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="@color/chip_bgcolor"
                        android:textColor="@android:color/white"
                        android:text="a Şıkkı"/>
                <com.google.android.material.chip.Chip

                        android:id="@+id/chipC"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="@color/chip_bgcolor"
                        android:textColor="@android:color/white"
                        android:text="a Şıkkı"/>
                <com.google.android.material.chip.Chip

                        android:id="@+id/chipD"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="@color/chip_bgcolor"
                        android:textColor="@android:color/white"
                        android:text="a Şıkkı"/>

            </com.google.android.material.chip.ChipGroup>
            <com.google.android.material.button.MaterialButton
                    android:layout_alignParentBottom="true"
                    android:text="Sonraki Soru"
                    android:id="@+id/btnNext"
                    app:cornerRadius="8dp"
                    app:rippleColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>