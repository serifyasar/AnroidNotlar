<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_vertical|center_horizontal"

              tools:context=".Fragment.SuccessFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView android:layout_width="60dp" android:layout_height="60dp"
               android:src="@drawable/ic_success" android:layout_marginBottom="20dp"/>

    <TextView android:layout_width="wrap_content" android:layout_marginBottom="40dp"
              android:id="@+id/msg"
              android:textSize="20sp" android:gravity="center"
              android:layout_height="wrap_content" android:text="Tebrikler. Testi tamamladınız..!"
    />



    <com.google.android.material.button.MaterialButton android:layout_width="match_parent"
                                                       android:padding="12dp"

                                                       android:layout_height="wrap_content"
                                                       app:backgroundTint="@color/colorAccent"
                                                       android:id="@+id/btnBack"
                                                       android:text="Geri Dön"
                                                       android:textColor="@android:color/white"
                                                       app:cornerRadius="16dp"

                                                       android:layout_marginTop="25dp"
                                                       android:layout_marginLeft="16dp"
                                                       android:layout_marginRight="16dp"
    />
</LinearLayout>